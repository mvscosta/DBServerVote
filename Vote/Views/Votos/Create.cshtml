@model Vote.DAO.Voto

@{
    ViewBag.Title = "Votar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="width:400px; margin:0 auto;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-12">
                    @Html.DropDownList("IdRestaurante", ViewBag.IdRestaurante as SelectList, htmlAttributes: new { @class = "form-control" , @size=10 })
                    @Html.ValidationMessageFor(model => model.IdRestaurante, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 text-right">
                    <input type="submit" value="Votar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>