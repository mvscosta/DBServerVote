@model IEnumerable<Vote.Models.VotoViewModel>

@{
    ViewBag.Title = "Votos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Histórico</h3>
<hr/>
<p>
    @Html.ActionLink("Votar", "Create")
</p>
<div class="table-responsive">
    <table class="table table-striped table-condensed table-hover">
        <thead>
            <tr>
                <th>
                    Data Votação
                </th>
                <th>
                    Restaurante
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataVoto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Restaurante.Nome)
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-xs text-warning fa fa-pencil" + ViewBag.Disabled }) |
                        @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "btn btn-xs text-info fa fa-info" + ViewBag.Disabled }) |
                        @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "btn btn-xs text-danger fa fa-trash" + ViewBag.Disabled })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>