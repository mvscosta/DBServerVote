@model IEnumerable<Vote.Models.VotoViewModel>

@{
    ViewBag.Title = "Histórico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Histórico</h2>

<p>
    @Html.ActionLink("Votar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Data Votação
        </th>
        <th>
            Restaurante
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DataVoto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Restaurante.Nome)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id=item.Id }, new { @class="btn btn-xs text-warning fa fa-pencil" }) |
            @Html.ActionLink(" ", "Details", new { id=item.Id }, new { @class = "btn btn-xs text-info fa fa-info" }) |
            @Html.ActionLink(" ", "Delete", new { id=item.Id }, new { @class = "btn btn-xs text-danger fa fa-trash" })
        </td>
    </tr>
}

</table>
