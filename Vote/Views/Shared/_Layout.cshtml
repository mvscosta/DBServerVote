<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-fixed-top " role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(" ", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("Histórico", "Index", "Votos", new { area = "" }, null)
                    </li>
                    <li class="dropdown">
                        <a> menu 1</a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-toggle">
                                <a>sub item 1</a>
                            </li>
                            <li class="dropdown-toggle">
                                <a>sub item 2</a>
                            </li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a>Administração</a>
                        @*@if (Request.IsAuthenticated && Html.UsuarioAdministrador())
                        {*@
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Restaurantes", "Index", "Restaurantes", new { area = "" }, null)</li>
                                <li>@Html.ActionLink("Categorias", "Index", "Categorias", new { area = "" }, null)</li>
                                <li>@Html.ActionLink("Modalidades", "Index", "Modalidades", new { area = "" }, null)</li>
                                <li>@Html.ActionLink("Funcionários", "Index", "Funcionarios", new { area = "" }, null)</li>
                            </ul>
                    </li>
                    @* } *@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container-fluid body-content">
        <h1>@ViewBag.Title</h1>

        @if ((ViewBag.Message != null) && (!String.IsNullOrEmpty(ViewBag.Message)))
        {
            <br />
            <div class="alert alert-info" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <i class="fa fa-info-circle"> &nbsp; </i>
                @ViewBag.Message;
            </div>
        }

        @RenderBody()

    </div>
    <footer class="footer">
        <div class="container-fluid">
            <p class="text-muted">&copy; @DateTime.Now.Year - Vote! by Vinicius Costa</p>
        </div>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
