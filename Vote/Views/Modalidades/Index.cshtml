@model IEnumerable<Vote.Core.Interfaces.Model.IModalidade>

@{
    ViewBag.Title = "Modalidades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Modalidades</h3>
<hr />
<p>
    @Html.ActionLink(" ", "Create", null, new { @class = "btn btn-lg btn-primary fa fa-plus" + ViewBag.Disabled })
</p>
<div class="table-responsive">
<table class="table table-striped table-condensed table-hover">
    <tr>
        <th style="width:100px"></th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-xs text-warning fa fa-pencil" + ViewBag.Disabled }) |
            @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "btn btn-xs text-info fa fa-info" + ViewBag.Disabled }) |
            @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "btn btn-xs text-danger fa fa-trash" + ViewBag.Disabled })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
    </tr>
}

</table>
    </div>